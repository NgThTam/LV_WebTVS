<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ADMIN</title>
    <link rel="icon" type="image/x-icon" href="image/favicon.ico">
    <link rel="stylesheet" href="css/main.css">
    <link href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css' rel='stylesheet'>
</head>
<script src="https://code.highcharts.com/highcharts.js"></script>
<script src="https://code.highcharts.com/modules/exporting.js"></script>
<script src="https://code.highcharts.com/modules/accessibility.js"></script>
<style>
    html{
        font-family: arial, sans-serif;
    }
</style>
<body>
    <div class="header_admin">
        <div class="admin">Ad<span style="color: white;">min</span></div>
        <a href="/"><i class='bx bx-log-out'></i></a>
    </div>
    <div class="admin_main">
        <div class="pro_admin">
            <div class="prof_ad">
                <img src="image/admin.png" alt="">
                <p>@-administrators</p>
            </div>
            <div class="Ql_admin">
                <ul>
                    <li data-id="scr1" class="js_admin_li "><i class='bx bxs-user'></i>User management</li>
                    <li data-id="scr2" class="js_admin_li js_admin_active"><i class='bx bxs-book'></i>Book management</li>
                    <li data-id="scr3" class="js_admin_li"><i class='bx bxs-star'></i>Book rating</li>
                </ul>
            </div>
        </div>
        <div class="content_admin">
            <div id="scr1" class="scr js_scr " style="font-size: 50px;">
                <h5 class="title_admin_book">Users management</h5>
                <div class="table">
                    <table class="table_books">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Location</th>
                                <th>Age</th>
                              </tr>
                        </thead>
                        <tbody>
                            
                        </tbody>
                      </table>
                </div>
            </div>
            <div id="scr2" class="scr js_scr js_show_scr">
                <div class="iconFunAdmins">
                    <div class="funBookad js_showAddbook">
                        <div class="iconAd"><i class='bx bx-book-add'></i></div>
                        <p class="texticonad">Add new books</p>
                    </div>
                    <div class="funBookad">
                        <div class="iconAd"><i class='bx bx-bar-chart-square' ></i></div>
                        <p class="texticonad">book statistics</p>
                    </div>
                </div>
                <div class="chartBook">
                    <div id="HighChartPubYear" class="highchar1"></div>
                </div>
                <div class="addNewBook hiddenSr js_showAB">
                    <div class="divAdd">
                        <h3>Add new books</h3>
                        <form action="/reate-new-book" class="js_formAddBook" method="POST">
                            <div class="contentAdd">
                                <div class="elAdd">
                                    <div class="textAdd">Book title :</div>
                                    <input type="text" name="title" id="">
                                    <span class="Elspan"></span>
                                </div>
                                <div class="elAdd">
                                    <div class="textAdd">Author :</div>
                                    <input type="text" name="author" id="">
                                    <span class="span2"></span>
                                </div>
                                <div class="elAdd">
                                    <div class="textAdd">Publishing year :</div>
                                    <input type="text" name="yearPub" id="">
                                    <span class="span3"></span>
                                </div>
                                <div class="elAdd">
                                    <div class="textAdd">Publisher :</div>
                                    <input type="text" name="publisher" id="">
                                    <span class="span4"></span>
                                </div>
                                <div class="addImg">
                                    <div class="textAdd textImage">Image :
                                        <div class="chooseImg">
                                            <div style="cursor:pointer" id="btnImg">add by file</div>
                                            <input type="file" id="inputImg" style="display:none" accept="image/png, image/gif, image/jpeg">
                                            <span>or add by link</span>
                                            <input type="text">
                                            <input type="text" name="image" hidden>
                                        </div>
                                    </div>
                                </div>
                                <input type="text" name="Idb" hidden>
                            </div>
                            <div class="butSubmit">
                                <button type="submit">Save</button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="funEdit">
                    <div class="bodyedit">
                        <h3>Book editing</h3>
                        <div class="bdedit">
                            <div class="imageEdit"><img src="http://images.amazon.com/images/P/1896860982.0" alt=""></div>
                            <div class="contentEdit">
                                <input type="text" name="idB" hidden>
                                <div class="eledit">
                                    <p>Title :</p>
                                    <input type="text" name="title">
                                </div>
                                <div class="eledit">
                                    <p>Author :</p>
                                    <input type="text" name="author">
                                </div>
                                <div class="eledit">
                                    <p>Publishing year :</p>
                                    <input type="number" name="yearpub">
                                </div>
                                <div class="eledit">
                                    <p>Publisher :</p>
                                    <input type="text" name="publisher">
                                </div>
                                <input type="text" name="imageB" hidden>
                                <div class="butSubmitEdit">
                                    <button>Save</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="bodyRenderbooks">
                    <div class="searchBooks">
                        <div class="iconSearch"><i class='bx bx-search-alt-2'></i></div>
                        <div class="inpsearch">
                            <input type="text" class="js_iptSearch">
                        </div>
                    </div>
                    <div class="listRenbooks">
                        <table>
                            <tr style="background-color: #fdc111;">
                              <th>Image</th>
                              <th>Book title</th>
                              <th>Author</th>
                              <th>Publishing year</th>
                              <th>Publisher</th>
                              <th>Edit</th>
                              <th>Delete</th>
                            </tr>
                            <tbody class="js_renderB">
                                <!-- <tr class="tableBadmin">
                                    <td><img src="http://images.amazon.com/images/P/0312195516.0" alt=""></td>
                                    <td style="text-align:left;">The Red Tent (Bestselling Backlist)</td>
                                    <td>Anita Diamant</td>
                                    <td>1998</td>
                                    <td>Picador USA</td>
                                    <td><i class='bx bxs-edit'></i></td>
                                    <td><i class='bx bx-x'></i></td>
                                </tr> -->
                            </tbody>
                          </table>
                    </div>
                </div>
            </div>
            <div id="scr3" class="scr js_scr" style="font-size: 50px;">
                <h5 class="title_admin_book">Books rating</h5>
                <div class="table">
                    <table class="table_books">
                        <thead>
                            <tr>
                                <th>ID User</th>
                                <th>ID Book</th>
                                <th>Name Book</th>
                                <th>Rating value</th>
                              </tr>
                        </thead>
                        <tbody>
                            
                        </tbody>
                      </table>
                </div>
            </div>
        </div>
    </div>
</body>
<script src="js/eventAdmin.js"></script>
<script src="js/dtAdmin.js"></script>
<script>
        document.getElementById('btnImg').addEventListener('click', () => { 
            document.getElementById('inputImg').click();
        })
</script>
</html>